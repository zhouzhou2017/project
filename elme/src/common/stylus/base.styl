.clearfix
  display: inline-block
  &:after
  	display: block
  	content: "."
  	height: 0
  	line-height: 0
  	cleat: both
  	visibility: hidden
  	
@media (-webkit-min-divice-pixel-ratio:  1.5),(min-device-pixel-ratio: 1.5)
